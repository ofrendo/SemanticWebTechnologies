{
	"manifest_version": 2,
	
	"name": "SWT Chrome Extension",
	"description": "*://www.bbc.com/*",
	"version": "0.0.1",
	
	"options_page": "options.html",
	
	"permissions": [
		"storage"
	],
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["css/style.css"],
			"js": ["js/jquery-3.1.1.min.js",
			       "js/d3.min.js", 
			       "js/stringSim.js",
				   "js/swt_config.js",
				   "js/swt_connector.js",
				   "js/swt_background.js",
				   "js/swt_visualize.js"]
		}
	],

	"icons": {  
		"128": "img/icon_search_128.png"
	},	
	
	"browser_action": {
		"default_title": "Search text with SWT",
		"default_icon" : "img/icon_search_128.png"
	}
}