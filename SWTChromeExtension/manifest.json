{
	"manifest_version": 2,
	
	"name": "SWT Chrome Extension",
	"description": "This extension provides an easy way to search for summoners, champion guides and champion counters.",
	"version": "0.0.1",
	
	"options_page": "options.html",
	
	"permissions": [
	
	],
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": [],
			"js": ["js/jquery-3.1.1.min.js", "js/swt_background.js"]
		}
	],

	"icons": {  
		"128": "img/icon_search_128.png"
	},	
	
	"browser_action": {
		"default_title": "Search text with SWT",
		"default_icon" : "img/icon_search_128.png"
	}
}